{
  "name": "project-settings-sync",
  "displayName": "Project Settings Sync",
  "description": "Automatically sync settings and switch context for monorepo sub-projects.",
  "publisher": "hiromoa1",
  "icon": "icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Project Settings Sync",
      "properties": {
        "projectSettingsSync.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "タブ切り替え時の設定同期の待機時間 (ミリ秒)"
        },
        "projectSettingsSync.autoCleanup": {
          "type": "boolean",
          "default": false,
          "description": "有効なプロジェクト以外(ルートファイル等)を開いた際に、適用済みの設定をリセットするかどうか。falseの場合、直前のプロジェクト設定が維持されます。"
        },
        "projectSettingsSync.focusMode": {
          "type": "boolean",
          "default": false,
          "description": "フォーカスモード: 開いているプロジェクト以外のファイルを検索結果から除外します。"
        },
        "projectSettingsSync.mappings": {
          "type": "array",
          "description": "拡張機能を有効にするパスとバッジの設定リスト",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "有効にするプロジェクトのパス"
              },
              "badge": {
                "description": "バッジ設定",
                "anyOf": [
                  {
                    "type": "string",
                    "description": "ルートとファイルの両方に同じバッジを表示します",
                    "maxLength": 2
                  },
                  {
                    "type": "object",
                    "description": "個別に設定します",
                    "properties": {
                      "root": {
                        "type": "string",
                        "description": "ルートディレクトリ用のバッジ",
                        "maxLength": 2
                      },
                      "file": {
                        "type": "string",
                        "description": "ファイル(タブ)用のバッジ",
                        "maxLength": 2
                      }
                    },
                    "additionalProperties": false
                  }
                ]
              }
            },
            "required": [
              "path"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "format": "prettier --write src",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/prettier": "^2.7.3",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^3.2.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
