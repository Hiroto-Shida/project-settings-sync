{
"name": "project-settings-sync",
  "displayName": "Project Settings Sync",
  "description": "Automatically sync settings and switch context for monorepo sub-projects.",
  "publisher": "hiromoa1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hiroto-Shida/project-settings-sync"
  },
  "icon": "assets/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Project Settings Sync",
      "properties": {
        "projectSettingsSync.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before syncing settings after switching tabs."
        },
        "projectSettingsSync.autoCleanup": {
          "type": "boolean",
          "default": false,
          "description": "Whether to reset applied settings when opening a file outside of mapped projects (e.g., root files). If false, the previous project settings are maintained."
        },
        "projectSettingsSync.focusMode": {
          "type": "boolean",
          "default": false,
          "description": "Focus Mode: Automatically excludes files outside the open project from search results."
        },
        "projectSettingsSync.mappings": {
          "type": "array",
          "description": "List of project paths and badge configurations.",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "The path of the project to enable."
              },
              "badge": {
                "description": "Badge configuration.",
                "anyOf": [
                  {
                    "type": "string",
                    "description": "Displays the same badge on both the root folder and files.",
                    "maxLength": 2
                  },
                  {
                    "type": "object",
                    "description": "Configure badges individually.",
                    "properties": {
                      "root": {
                        "type": "string",
                        "description": "Badge for the root directory.",
                        "maxLength": 2
                      },
                      "file": {
                        "type": "string",
                        "description": "Badge for files (tabs).",
                        "maxLength": 2
                      }
                    },
                    "additionalProperties": false
                  }
                ]
              }
            },
            "required": [
              "path"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "biome check src",
    "format": "biome format --write src",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
